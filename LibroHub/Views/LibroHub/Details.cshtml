@model LibroHub.Application.LibroHub.LibroHubDto

@{
    ViewData["Title"] = $"Details of {Model.Name}";
}

<div class="container">
    <div class="card mx-auto my-5 shadow-sm" style="width: 35rem;">
        <div class="card-body">
            <h2 class="card-title">@Model.Name</h2>
            <p class="card-text"><strong>Author: </strong>@Model.Author</p>
            <p class="card-text"><strong>Description: </strong>@Model.Description</p>
            <p class="card-text"><strong>Category: </strong>@Model.BookCategory</p>
            <p class="card-text"><strong>Page Number: </strong>@Model.PageNumber</p>
            <p class="card-text"><strong>Rating: </strong>@Model.Rating</p>
            <p class="card-text"><strong>Your opinion: </strong>@Model.About</p>
            <div class="d-flex justify-content-between align-items-center">
            <a class="btn btn-primary shadow-sm" asp-controller="LibroHub" asp-action="Edit" asp-route-encodedName="@Model.EncodedName">Edit</a>
            <a asp-action="Index" class="btn btn-outline-primary shadow-sm">Back to List</a>
            </div>
        </div>
    </div>
</div>