@model IEnumerable<LibroHub.Application.LibroHub.LibroHubDto>


@{
    ViewData["Title"] = "LibroHub";
}

<h1>Your Books</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        @if (item.IsEditable)
        {
            <div class="card m-3" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Author</p>
                    <p class="card-text">@item.Description</p>
                    <a class="btn btn-primary" asp-controller="LibroHub" asp-action="Details" asp-route-encodedName="@item.EncodedName">Details</a>
                    @if (item.IsEditable)
                    {
                        <a class="btn btn-outline-secondary " asp-controller="LibroHub" asp-action="Edit" asp-route-encodedName="@item.EncodedName">Edit</a>
                    }

                </div>
            </div>
        }
    }
</div>

